<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#4c4941"
    android:orientation="vertical" >

    <View
        android:id="@+id/view1"
        android:layout_width="320dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:background="@drawable/shadow"
        android:rotation="5" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:rotation="-5"
        android:src="@drawable/kinbookback" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="36dp"
        android:background="#ffffff"
        android:rotation="5" >

        <com.touchKin.touchkinapp.custom.RoundedImageView
            android:id="@+id/senderImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:src="@drawable/activity_bg" />

        <TextView
            android:id="@+id/videoCommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/videoDayTextView"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/senderImage"
            android:text="Mom, watch Mili and sha playing with there freinds"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/videoDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/videoTimeTextView"
            android:layout_alignBottom="@+id/videoTimeTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="Friday"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/videoTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/senderImage"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/videoDayTextView"
            android:text="6:45 PM"
            android:textSize="17sp" />
    </RelativeLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#0000"
        android:rotation="-5"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="330dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:rotation="-5" />

    <Button
        android:id="@+id/like_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/view1"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginTop="94dp"
        android:background="@drawable/ic_icon_send_touch" />

    <Button
        android:id="@+id/profile_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/videoView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:background="@drawable/play_btn"
        android:rotation="-5" />

</RelativeLayout>